{
  "name": "snappify",
  "displayName": "snappify",
  "description": "Easily explain your code and share your knowledge with the rest of the world.",
  "version": "1.0.2",
  "publisher": "snappify",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/snappify-io/vscode-extension"
  },
  "engines": {
    "vscode": "^1.18.0"
  },
  "keywords": [
    "screenshot",
    "snippet",
    "snap",
    "clipboard",
    "share",
    "snappify"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:snappify.new"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "command": "snappify.new",
        "title": "Open in Snappify âœ¨"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "snappify.new"
        }
      ]
    },
    "keybindings": [
       {
        "command": "snappify.new",
        "key": "ctrl+alt+s",  
        "mac": "cmd+alt+s",   
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "esbuild": "^0.14.42",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.4"
  }
}
